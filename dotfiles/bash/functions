function authme {
  ssh $1 'mkdir -p .ssh && touch .ssh/authorized_keys && chmod 0700 .ssh && chmod 0600 .ssh/authorized_keys && cat >> .ssh/authorized_keys' <~/.ssh/id_dsa.pub
}

tab () {
  osascript 2>/dev/null <<EOF
    tell application "System Events"
      tell process "Terminal" to keystroke "t" using command down
  	end
  	tell application "Terminal"
      activate
      do script with command "cd $PWD; $*" in window 1
    end tell
EOF
}

function take() { 
    mkdir -p "$1"
    cd "$1" 
}

function killnamed () { 
    ps ax | grep $1 | cut -d ' ' -f 2 | xargs kill 
}

# === Git ===

# Commit pending changes and quote all args as message
function gam() { 
    git commit -v -a -m "$*"
}

function gm() { 
    git commit -v -m "$*"
}
